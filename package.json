{
  "name": "esbuild-minify-templates",
  "version": "0.4.1",
  "description": "Minify template literal strings as part of an esbuild powered build process",
  "license": "MIT",
  "repository": "https://github.com/MaxMilton/esbuild-minify-templates",
  "author": "Max Milton <max@happycode.ltd>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "dev": "NODE_ENV=development tsc --watch --preserveWatchOutput",
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "prebuild": "rm -rf dist; mkdir dist",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r esbuild-register test '\\.test\\.ts$'"
  },
  "peerDependencies": {
    "esbuild": "^0.10.0 || ^0.11.0 || ^0.12.0"
  },
  "dependencies": {
    "@ampproject/remapping": "^1.0.1",
    "astray": "^1.1.1",
    "magic-string": "^0.25.7",
    "meriyah": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "15.12.2",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "c8": "7.7.3",
    "esbuild": "0.12.9",
    "esbuild-register": "2.6.0",
    "eslint": "7.30.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.4",
    "prettier": "2.3.2",
    "typescript": "4.3.4",
    "uvu": "0.5.1"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
