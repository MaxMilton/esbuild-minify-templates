{
  "name": "esbuild-minify-templates",
  "version": "0.11.0",
  "description": "Minify template literal strings as part of an esbuild powered build process",
  "repository": "maxmilton/esbuild-minify-templates",
  "author": "Max Milton <max@happyhackers.xyz>",
  "license": "MIT",
  "engines": {
    "node": ">= 12"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bun run lint:js && bun run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "postbuild": "tsc --emitDeclarationOnly -p tsconfig.dts.json",
    "prebuild": "rm -rf dist",
    "test": "bun test --coverage"
  },
  "peerDependencies": {
    "esbuild": ">=0.13.0 <1.0.0"
  },
  "dependencies": {
    "@ampproject/remapping": "^2.2.1",
    "astray": "^1.1.1",
    "magic-string": "^0.30.3",
    "meriyah": "^4.3.7"
  },
  "devDependencies": {
    "@types/estree": "1.0.1",
    "@types/node": "20.7.1",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "bun-types": "0.8.1",
    "esbuild": "0.19.2",
    "eslint": "8.50.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-unicorn": "48.0.1",
    "prettier": "3.0.3",
    "prettier-plugin-pkg": "0.18.0",
    "typescript": "5.2.2"
  }
}
